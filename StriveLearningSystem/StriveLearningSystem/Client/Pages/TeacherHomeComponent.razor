@inject CoursesAgent  _coursesAgent

@if (_coursesvar == null)
{
    <p>Loading...</p>
}
else
{
    <table rules="all" style="width:70%; position:center">
        <tr>
            <th>CourseID</th>
            <th>Description</th>
        </tr>
        @foreach (var course in _coursesvar)
        {
            <tr>
                <td>@course.CourseID</td>
                <td>@course.Description</td>
            </tr>
        }
    </table>
}

<div>

   This is course taught by the teacher
</div>

@code {

    private List<Course>
    _coursesvar;

    protected override async Task OnInitializedAsync()
    {
    _coursesvar = await _coursesAgent.GetCoursesByUser();
    }

    }
